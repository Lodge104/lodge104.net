# Production environment configuration

# Project Configuration
project_name = "lodge104"

# Region Configuration
region = "us-east-1"

# VPC Configuration
vpc_cidr             = "10.0.0.0/16"
availability_zones   = ["us-east-1a", "us-east-1b", "us-east-1c"]
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
private_subnet_cidrs = ["10.0.4.0/24", "10.0.5.0/24", "10.0.6.0/24"]
database_subnet_cidrs = ["10.0.7.0/24", "10.0.8.0/24", "10.0.9.0/24"]

# EC2 Configuration
instance_type    = "t3.small"
desired_capacity = 2
max_size         = 5
min_size         = 1

# Database Configuration
db_name     = "wordpress"
db_username = "admin"
# IMPORTANT: Change this password before deploying!
db_password = "ChangeThisSecurePassword123!"

# Aurora Serverless Configuration
backup_retention_period = 7
skip_final_snapshot    = false
deletion_protection    = true
auto_pause            = false
max_capacity          = 8
min_capacity          = 2

# Domain Configuration
domain_name = "lodge104.net"
route53_zone_id = ""  # Leave empty to create new hosted zone, or provide existing zone ID
# IMPORTANT: Set this to your ACM certificate ARN for HTTPS (or leave empty for auto-creation)
ssl_certificate_arn = ""

# Redis Configuration
redis_node_type         = "cache.t3.small"
redis_num_cache_clusters = 2
# IMPORTANT: Set a strong Redis AUTH token for security
redis_auth_token = "YourStrongRedisAuthToken123!"

# CloudFront Caching Settings - Production (Aggressive caching for performance)
cloudfront_price_class      = "PriceClass_200"    # Better global performance
cloudfront_default_ttl      = 86400               # 24 hours - long cache for better performance
cloudfront_max_ttl          = 31536000            # 1 year - maximum cache time
cloudfront_min_ttl          = 0                   # Allow cache bypass when needed
cloudfront_admin_ttl        = 0                   # No caching for admin areas
cloudfront_compress         = true                # Enable compression
cloudfront_query_string     = false               # Don't forward query strings for better caching
cloudfront_cookies_forward  = "whitelist"         # Only forward necessary cookies

# HTTPS Backend Configuration (End-to-End Encryption)
enable_https_backend = true   # Enable end-to-end encryption for production
