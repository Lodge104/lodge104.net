# Development environment configuration

# Project Configuration
project_name = "lodge104-dev"

# Region Configuration
region = "us-east-1"

# VPC Configuration
vpc_cidr             = "10.1.0.0/16"
availability_zones   = ["us-east-1a", "us-east-1b"]
public_subnet_cidrs  = ["10.1.1.0/24", "10.1.2.0/24"]
private_subnet_cidrs = ["10.1.3.0/24", "10.1.4.0/24"]
database_subnet_cidrs = ["10.1.5.0/24", "10.1.6.0/24"]

# EC2 Configuration (smaller instances for dev)
instance_type    = "t3.micro"
desired_capacity = 1
max_size         = 2
min_size         = 1

# Database Configuration
db_name     = "wordpress_dev"
db_username = "admin"
# IMPORTANT: Change this password before deploying!
db_password = "DevPassword123!"

# Aurora Serverless Configuration (more cost-effective for dev)
backup_retention_period = 1
skip_final_snapshot    = true
deletion_protection    = false
auto_pause            = true
max_capacity          = 2
min_capacity          = 1

# Domain Configuration (optional for dev)
domain_name = ""
route53_zone_id = ""  # Leave empty to create new hosted zone

# Redis Configuration (smaller instances for dev)
redis_node_type         = "cache.t3.micro"
redis_num_cache_clusters = 1
redis_auth_token = "DevRedisToken123!"

# CloudFront Caching Settings - Development (Less aggressive caching for faster development)
cloudfront_price_class      = "PriceClass_100"    # Cheapest option for development
cloudfront_default_ttl      = 300                 # 5 minutes - short cache for content changes
cloudfront_max_ttl          = 3600                # 1 hour - maximum cache time
cloudfront_min_ttl          = 0                   # Allow immediate cache bypass
cloudfront_admin_ttl        = 0                   # No caching for admin areas
cloudfront_compress         = true                # Enable compression
cloudfront_query_string     = true                # Forward query strings for debugging
cloudfront_cookies_forward  = "all"               # Forward all cookies for easier debugging

# HTTPS Backend Configuration (End-to-End Encryption)
enable_https_backend = false  # HTTP backend for development (simpler setup)
